    <changeSet  id="1"  author="denrod">
        <createTable  tableName="myuser">  
            <column  name="id"  type="int"  autoIncrement="true">  
                <constraints  primaryKey="true"  nullable="false"/>
             </column>  
            <column  name="username"  type="varchar(25)"/>  
            <column  name="password"  type="varchar(80)">  
                <constraints  nullable="false"/>  
            </column>  
            <column  name="roles"  type="varchar(50)"/>
        </createTable> 
    </changeSet>  
    
        <changeSet  id="2"  author="denrod">
    <createIndex clustered= "true"
              indexName="idx_username"
              tableName="myuser"
